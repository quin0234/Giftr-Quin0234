<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.quin0234.giftr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Giftr</name>
    <description>
        Remember those gifts with Giftr by Paul Quinnell 
    </description>
    <author email="quin0234@algonquinlive.com" href="http://cordova.io">
        Paul Edward Quinnell
    </author>
    <content src="index.html" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
    <allow-intent href="market:*" />
        
    <splash density="land-ldpi" src="res/screens/screen-ldpi-landscape.png"/>
    <splash density="land-hdpi" src="res/screens/screen-hdpi-landscape.png"/>
    <splash density="land-mdpi" src="res/screens/screen-mdpi-landscape.png"/>
    <splash density="land-xhdpi" src="res/screens/screen-xhdpi-landscape.png"/>
    <splash density="land-xxhdpi" src="res/screens/screen-xxhdpi-landscape.png"/>
    <splash density="land-xxxhdpi" src="res/screens/screen-xxxhdpi-landscape.png"/>

    <splash density="port-ldpi" src="res/screens/screen-ldpi-portrait.png"/>
    <splash density="port-hdpi" src="res/screens/screen-hdpi-portrait.png"/>
    <splash density="port-mdpi" src="res/screens/screen-mdpi-portrait.png"/>
    <splash density="port-xhdpi" src="res/screens/screen-xhdpi-portrait.png"/>
    <splash density="port-xxhdpi" src="res/screens/screen-xxhdpi-portrait.png"/>
    <splash density="port-xxxhdpi" src="res/screens/screen-xxxhdpi-portrait.png"/>
    
    <icon density="ldpi" scr="res/icons/icon-36-ldpi.png"/>
    <icon density="mdpi" src="res/icons/icon-48-mdpi.png"/>
    <icon density="hdpi" src="res/icons/icon-72-hdpi.png"/>
    <icon density="xhdpi" src="res/icons/icon-96-xhdpi.png"/>
    <icon density="xxhdpi" src="res/icons/icon-144-xxhdpi.png"/>
    <icon density="xxxhdpi" src="res/icons/icon-192-xxxhdpi.png"/>
    </platform>
</widget>
